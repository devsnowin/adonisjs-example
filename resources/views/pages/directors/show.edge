@layout.app({title: 'Director Name'}) 
    
    <main class="space-y-6">
        <h1>Movies by {{director.fullName}}</h1>
        <ul class="flex flex-wrap gap-3">
            @each(movie in movies)
                @!movie.card({ movie, class: 'w-full max-w-sm' })
            @end
        </ul>
    </main>

@end